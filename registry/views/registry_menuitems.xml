    <menuitem name="Motorcycle Registry"
        id="menu_registry"
        sequence="1"
        web_icon="registry,static/description/icon.png">
        <menuitem id="menu_registry_sub" name="Motorcycle Registry" sequence="1">
            <menuitem id="menu_registry_courses" name="Registry" sequence="2"
                action="course_list_action"/>
        </menuitem>
    </menuitem>
